<%- include('../partials/header')%>
  <style>
    /* General Styles */
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      line-height: 1.6;
    }

    /* Header Styles */
    header {
      background-color: #28a745;
      color: white;
      padding: 20px;
      text-align: center;
    }

    header h1 {
      margin: 0;
      font-size: 24px;
    }

    /* Navigation Links */
    nav {
      background-color: #333;
      padding: 10px;
      text-align: center;
    }

    nav a {
      color: white;
      text-decoration: none;
      margin: 0 15px;
      font-size: 16px;
    }

    nav a:hover {
      color: #28a745;
    }

    /* Form Styles */
    main {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    form {
      display: flex;
      flex-direction: column;
    }

    input[type="text"] {
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
    }

    input[type="text"]::placeholder {
      color: #999;
    }

    textarea {
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
    }

    textarea::placeholder {
      color: #999;
    }

    input[type="submit"] {
      padding: 10px;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
    }

    input[type="submit"]:hover {
      background-color: #218838;
    }
  </style>
  <link rel="stylesheet" href="../public/add-home.css">
  </head>
  <!-- Header -->
  <header>
    <h1>
      <%=editing ? "Edit" :"Register"%> Your Home Here
    </h1>
  </header>

  <!-- Navigation Links -->
  <nav>
    <a href="/">Go to Home</a>
    <a href="/host/add-home">Add Home</a>
  </nav>

  <!-- Main Form -->
  <main>
    <form action="/host/<%= editing ? "edit-home" : "add-home" %>" method="POST">

      <input type="hidden" name="id" value="<%= editing ? home._id : '' %>" />

      <input type="text" name="housename" placeholder="Enter the name of your house"
        value="<%= editing ? home.housename : '' %>">

      <input type="text" name="price" placeholder="Enter the price per night" value="<%=editing ? home.price : '' %>">

      <input type="text" name="rating" placeholder="Enter the rating" value="<%=editing ? home.rating : '' %>">

      <input type="text" name="imageurl" placeholder="Enter the photo URL" value="<%=editing ? home.imageurl: '' %>">

      <textarea name="description"
        placeholder="Enter the description of your house"><%=editing ? home.description : '' %></textarea>

      <input type="submit" value="<%=editing ? " Update Home":"Add Home" %>">
    </form>
  </main>
  </body>

  </html>