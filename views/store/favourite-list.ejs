<%- include('../partials/header')%>
</head>

<body>
  <!-- Navigation Links -->
<%- include('../partials/nav')%>

  <!-- Main Heading -->
  <h1>Registered Homes</h1>

  <!-- Card Container -->
  <div class="card-container">
    <% favouriteHomes.forEach(home=> { %>
      <div class="card">
        <!-- Home Image -->
        <img src="<%= home.imageurl %>" alt="<%= home.housename %>" class="card-image">
        <div class="card-content">
          <!-- Home Name -->
          <h2 class="card-title">
            <%= home.housename %>
          </h2>
          <!-- Price per Night -->
          <p class="card-details">
            <span class="card-price">â‚¹<%= home.price %></span> per night
          </p>
          <!-- Rating -->
          <p class="card-details">
            Rating: <span class="card-rating">
              <%= home.rating %>
            </span>/5
          </p>
            <button>book</button>
            <form action="/favourites/delete/<%=home._id%>" method="post">
              <button type="submit" style="background-color: darksalmon; padding: 5px;">remove from fav</button>
            </form>
        </div>
      
      </div>
      <% }) %>
  </div>
</body>

</html>