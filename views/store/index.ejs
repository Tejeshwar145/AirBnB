<%- include('../partials/nav')%>

  <!-- Main Heading -->
  <h1>Registered Homes</h1>

  <!-- Card Container -->
  <div class="card-container">
    <% registeredhomes.forEach(home=> { %>
      <div class="card">
        <!-- Home Image -->
        <img src="<%= home.imageurl %>" alt="<%= home.housename %>" class="card-image">
        <div class="card-content">
          <!-- Home Name -->
          <h2 class="card-title">
            <%= home.housename %>
          </h2>
          <!-- Price per Night -->
          <p class="card-details">
            <span class="card-price">â‚¹<%= home.price %></span> per night
          </p>
          <!-- Rating -->
          <p class="card-details">
            Rating: <span class="card-rating">
              <%= home.rating %>
            </span>/5
          </p>
            <button>book</button>
        </div>
      
      </div>
      <% }) %>
  </div>
</body>

